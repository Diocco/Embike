<body>

    {{!-- Contenedor de carga inicial --}}
    <div id="ventanaCarga" >
        <div id="ventanaCarga__barraCarga-fondo">
            <div id="ventanaCarga__barraCarga"></div>
        </div>
        <div id="ventanaCarga__texto"></div>
    </div>

    {{>  mensajeEmergente }}

    {{!-- Fondo oscuro de la ventana emergente --}}
    <div id="ventanaEmergenteFondo" class="noActivo">

        {{!-- Ventana emergente que avisa o le hace una pregunta al usuario --}}
        <div id="ventanaEmergente" class="noActivo">

            <div id="ventanaEmergente__mensaje"></div>
            <div id="ventanaEmergente__aceptar">
                <button id="ventanaEmergente__aceptar__boton">Aceptar</button>
            </div>
            <div id="ventanaEmergente__rechazar">
                <button id="ventanaEmergente__rechazar__boton">Rechazar</button>
            </div>
    
        </div>

        {{!-- Ventana emergente para modificar un producto --}}
        <div id="modificarProducto" class="noActivo">

            <div id="modificarProducto__fotoDescripcion">
                <h4>Foto</h4>
                <img id="modificarProducto__fotoDescripcion__img" class="imagenProducto"></img>
                <h4>Descripcion</h4>
                <textarea id="modificarProducto__fotoDescripcion__textarea"></textarea>
            </div>

            <form id="modificarProducto__caracteristicas">
                <h4 class="modificarProducto__caracteristicas__h4" >ID</h4>
                <input  class="modificarProducto__caracteristicas__input"  name="_id"    id="modificarProducto__caracteristicas__input__id" readonly>
                <h4 class="modificarProducto__caracteristicas__h4" >Nombre</h4>
                <input  class="modificarProducto__caracteristicas__input"  name="nombre"    id="modificarProducto__caracteristicas__input__nombre">
                <h4 class="modificarProducto__caracteristicas__h4" >Precio Unitario</h4>
                <input  class="modificarProducto__caracteristicas__input"  name="precio"    id="modificarProducto__caracteristicas__input__precio" type="number">
                <h4 class="modificarProducto__caracteristicas__h4" >Marca</h4>
                <input  class="modificarProducto__caracteristicas__input"  name="marca"     id="modificarProducto__caracteristicas__input__marca">
                <h4 class="modificarProducto__caracteristicas__h4" >Modelo</h4>
                <input  class="modificarProducto__caracteristicas__input"  name="modelo"    id="modificarProducto__caracteristicas__input__modelo">
                <h4 class="modificarProducto__caracteristicas__h4" >Categoria</h4>
                <select class="modificarProducto__caracteristicas__input" name="categoria"  id="modificarProducto__caracteristicas__select__categoria">
                    <option>BMX</option>
                    <option>MTB</option>
                    <option>Ni√±os</option>
                    <option>Accesorios</option>
                    <option>Agregar Categoria</option>
                </select>
                <input  class="modificarProducto__caracteristicas__input noActivo" name="categoria" placeholder="Ingrese una nueva categoria" id="modificarProducto__caracteristicas__input__categoria">
                <h4 class="modificarProducto__caracteristicas__h4" >Imagenes</h4>
                <div    class="modificarProducto__caracteristicas__input"                   id="modificarProducto__caracteristicas__div-imagenes" ></div>
            </form>

            <div id="variantesProducto">
                <h4 class="modificarProducto__caracteristicas__h4" >Variantes</h4>
                {{!-- Indice de categorias --}}
                <div id="variantesProducto__indice">
                    <h5>SKU</h5>
                    <h5>Color</h5>
                    <h5>Talle</h5>
                    <h5>Stock</h5>
                </div>
                <div id="variantesProducto__variantes"></div>
                <button id="variantesProducto__agregarVariante" class="botonRegistener3" >Agregar Variante</button>
            </div>

            <div id="especificacionesProducto">
                <h4 class="modificarProducto__caracteristicas__h4" >Especficaciones</h4>
                {{!-- Indice de categorias --}}
                <div id="especificacionesProducto__indice">
                    <h5>Nombre</h5>
                    <h5>Descripcion</h5>
                </div>
                <div id="especificacionesProducto__especificaciones"></div>
                <button id="especificacionesProducto__button" class="botonRegistener3" >Agregar especificacion</button>
            </div>

            <div id="modificarProducto__respuesta">
                <button id="modificarProducto__aceptar" class="botonRegistener3">Aceptar</button>
                <button id="modificarProducto__cancelar" class="botonRegistener3">Cancelar</button>
            </div>
        </div>

        {{!-- Ventana emergente para visualizar o cargar una imagen de un producto --}}
        <div id="imagenVariantesProducto" class="noActivo">
            {{!-- Contenedor de la imagen --}}
            <img id="imagenVariantesProducto__img" class="imagenProducto">
            {{!-- Boton para eliminar la imagen actual --}}
            <i class="fa-solid fa-trash-can botonNegativo botonRegistener3" id="producto__eliminarImagen" aria-hidden="true"></i>
            {{!-- Input para agregar una nueva imagen --}}
            <input id="imagenVariantesProducto__input" class="botonRegistener1" type="file">
            {{!-- Botones para guardar o volver --}}
            <div>
                {{!-- Boton para guardar la imagen --}}
                <button id="imagenVariantesProducto__guardar" class="botonRegistener3">Guardar</button>
                {{!-- Boton para volver --}}
                <button id="imagenVariantesProducto__volver" class="botonRegistener3">Volver</button>
            </div>
        </div>

        {{!-- Ventana emergente para modificar una compra--}}
        <section id="modificarVenta" class="noActivo">
            <form id="modificarVenta__form">
                <h2 id="modificarVenta__h2">ID: 890as9d8089ads809das890das908</h2>
                <h3 id="modificarVenta__h3">Estado: Exitoso</h3>
                <div id="modificarVenta__infoGen">
                    <h4 id="modificarVenta__infoGen__h4">Informacion general</h4>
                    <h5    class="modificarVenta__infoGen__h5">Lugar de venta</h5>
                    <h5    class="modificarVenta__infoGen__h5">Fecha de venta</h5>
                    <input class="inputRegistener1" id="modificarVenta__infoGen__lugarVenta" name="lugarVenta" type="text" >
                    <input class="inputRegistener1" id="modificarVenta__infoGen__fechaVenta" name="fechaVenta" type="datetime-local" >
                    <h5    class="modificarVenta__infoGen__h5">Vendedor</h5>
                    <h5    class="modificarVenta__infoGen__h5">Cliente</h5>
                    <input class="inputRegistener1" id="modificarVenta__infoGen__vendedor" name="vendedor" type="text" >
                    <input class="inputRegistener1 nodisponible" id="modificarVenta__infoGen__cliente" type="text" disabled>
                    <h5    class="modificarVenta__infoGen__h5" id="modificarVenta__infoGen__observacion-h5">Observacion</h5>
                    <textarea class="inputRegistener1" id="modificarVenta__infoGen__observacion" name="observacion" type="text" ></textarea>
                </div>
                <div>
                    <h4>Carrito</h4>
                    <div id="modificarVenta__carrito">
                        <div id="modificarVenta__carrito__indice" class="modificarVenta__carrito__fila">
                            <div>Nombre</div>
                            <div class="modificarVenta__carrito__cantidad">Cantidad</div>
                            <div class="modificarVenta__carrito__precio">Precio</div>
                        </div>
                    </div>
                </div>
                <div id="modificarVenta__infoPago">
                    <h4 id="modificarVenta__infoPago__h4">Informacion de pago</h4>
                    <h3 class="modificarVenta__infoPago__h3">Subtotal</h3>
                    <div class="inputRegistener1" id="modificarVenta__infoPago__subtotal"></div>
                    <input class="inputRegistener1" id="modificarVenta__infoPago__descuentoNombre" name="descuentoNombre" type="text" placeholder="Nombre del descuento">
                    <input class="inputRegistener1" id="modificarVenta__infoPago__descuento" name="descuento" type="number" placeholder="$ 0">
                    <h3 class="modificarVenta__infoPago__h3">Total</h3>
                    <div class="inputRegistener1" id="modificarVenta__infoPago__total"></div>
                    <input class="inputRegistener1" id="modificarVenta__infoPago__metodo1" name="metodo1" type="text" placeholder="Metodo de pago 1">
                    <input class="inputRegistener1" id="modificarVenta__infoPago__pago1" name="pago1" type="number" placeholder="$ 0">
                    <input class="inputRegistener1" id="modificarVenta__infoPago__metodo2" name="metodo2" type="text" placeholder="Metodo de pago 2">
                    <input class="inputRegistener1" id="modificarVenta__infoPago__pago2" name="pago2" type="number" placeholder="$ 0">
                </div>
                <div id="modificarVenta__contenedorModificaciones">
                    <h4>Modificaciones</h4>
                    <div id="modificarVenta__modificaciones">
                        <div id="modificarVenta__modificaciones__indice" class="modificarVenta__modificaciones__fila">
                            <div class="modificarVenta__modificaciones__fecha">Fecha</div>
                            <div class="modificarVenta__modificaciones__usuario">Usuario</div>
                            <div class="modificarVenta__modificaciones__modificacion">Modificacion</div>
                        </div>
                    </div>
                </div>
                <div id="modificarVenta__respuesta">
                    <button id="modificarVenta__respuesta__guardar" type="submit" class="botonRegistener3">Guardar</button>
                    <button id="modificarVenta__respuesta__salir" class="botonRegistener3">Salir</button>
                </div>
            </form>
        </section>
    </div>

    <aside id="barraLateral">
        <div id="barraLateral__iconos">
            <button id="barraLateral_A__icono" class="botonRegistener3">
                <i class="fa-solid fa-list"></i>
            </button>
            <button id="barraLateral_B__icono" class="botonRegistener3" >
                <i class="fa-solid fa-cart-shopping"></i>
            </button>
            <button id="barraLateral__caja" class="botonRegistener3">
                <i class="fa-solid fa-cash-register"></i>
            </button>
            <button id="barraLateral_C__icono" class="botonRegistener3">
                <i class="fa-solid fa-table-cells"></i>
            </button>
            <button id="barraLateral_D__icono" class="botonRegistener3 nodisponible" disabled>
                <i class="fa-solid fa-chart-line"></i>
            </button>
            <button id="barraLateral_E__icono" class="botonRegistener3 nodisponible" disabled>
                <i class="fa-solid fa-address-card"></i>
            </button>
            <button id="barraLateral_AA__icono" class="botonRegistener3">
                <i class="fa-solid fa-gear"></i>
            </button>
        </div>
        <div id="barraLateral__nombres">
            <div class="ayudaRegistener1">Productos</div>
            <div class="ayudaRegistener1">Venta al publico</div>
            <div class="ayudaRegistener1">Caja</div>
            <div class="ayudaRegistener1">Registros</div>
            <div class="ayudaRegistener1">Estadisticas</div>
            <div class="ayudaRegistener1">Registro de empleados</div>
            <div  class="ayudaRegistener1">Configuracion</div>
        </div>
    </aside>

    {{!-- Contenedor general de categorias, indice y productos --}}
    <section id="contenedorConfiguracionProductos" class="contenedorRegistener1  noActivo">
        <div id="contenedorConfiguracionProductos__contenido">
            {{!-- Contenedor de categorias --}}
            <div id="contenedorConfiguracionProductos__contenido__categorias"></div>

            {{!-- Indice de categorias --}}
            <div class="tipo__categoria__producto">
                <div>Nombre</div>
                <div>Precio</div>
                <div>Stock</div>
                {{!-- Boton para agregar un producto --}}
                <button id="contenedorConfiguracionProductos__contenido__agregarProducto" class="botonRegistener3"> + </button>
            </div>
            

            {{!-- Contenedor de productos --}}
            <div id="contenedorConfiguracionProductos__contenido__productos" ></div>
        </div>
    </section>

    {{!-- Venta al publico --}}
    <section id="seleccionProductos" class="contenedorRegistener1">
        <div class="contenedorRegistener2" id="seleccionProductos__div-contenedorSeleccionarProductos">
            <h2>Seleccionar Productos</h2>
            <label>
                Agrupar por categoria
                <input type="checkbox"  id="seleccionProductos__botonAgruparCategorias" checked>
            </label>
            <label>
                Agrupar por productos
                <input type="checkbox"  id="seleccionProductos__botonSoloVariantes" checked>
            </label>
            <input id="seleccionProductos__input-buscarSKU" class="inputRegistener1" placeholder="Buscar un SKU">
            <input id="seleccionProductos__input-buscar" class="inputRegistener1" placeholder="Buscar un producto">
            <div id="seleccionProductos__div-productos" > </div>
        </div>
        <div class="contenedorRegistener2" id="seleccionProductos__div-productosFav">
            <h2>Productos favoritos</h2>
        </div>
        <div class="contenedorRegistener2" id="seleccionProductos__div-resumen">
            <h2>Resumen</h2>
            <table id="seleccionProductos__div-resumen__table">
                <thead>
                    <tr>
                        <th class="seleccionProductos__div-resumen__table__nombre">SKU</th>
                        <th class="seleccionProductos__div-resumen__table__nombre">Nombre</th>
                        <th>Cantidad</th>
                        <th>Precio</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
            <div id="seleccionProductos__div-resumen__total">
                <div>Total</div>
                <div >$ 0</div>
            </div>
        </div>
        <div class="contenedorRegistener2" id="botonesVentaPublico">
            <button class="botonRegistener2 nodisponible" id="botonIrSeleccionProductos"><i class="fa-solid fa-arrow-right-long"></i></button>
            <button class="botonRegistener2" id="botonIrPago"><i class="fa-solid fa-arrow-right-long"></i></button>
        </div>
        <div class="contenedorRegistener2" id="seleccionProductos__div-pago">
            <h2 id="seleccionProductos__div-pago__h2">Pago</h2>
            <div id="div-pago__metodoPago">
                <h4>Modo de pago</h4>   
            </div>
            <div id="div-pago__modificacion">
                <h4>Modificacion</h4>
                <input class="inputRegistener1" placeholder="Ingrese porcentaje de descuento" type="number"></input>
                <button class="botonRegistener3">10% de descuento</button>
                <button class="botonRegistener3">15% de descuento</button>
                <button class="botonRegistener3">Sin cargo</button>
            </div>
            <div id="div-pago__div-total">
                <h5>Pago 1</h5>
                <h5>Pago 2</h5>
                <input class="inputRegistener1"              id="div-pago__div-total__div-pago1" placeholder="Ingrese el monto">
                <input class="inputRegistener1 nodisponible" id="div-pago__div-total__div-pago2" type="number" placeholder="Ingrese el monto" disabled>
                <h5    class="div-pago__div-total__h5">Vuelto</h5>
                <div   class="inputRegistener1"              id="div-pago__div-total__div-vuelto">$ 0</div>
                <h5    class="div-pago__div-total__h5">Total</h5>
                <div   class="inputRegistener1"              id="div-pago__div-total__div-total">$ 0</div>

            </div>
            <div id="div-pago__confirmar">
                <textarea id="div-pago__confirmar__observacion" placeholder="Ingrese una observacion"></textarea>
                <button id="div-pago__confirmar__boton" class="botonRegistener3 nodisponible">Confirmar</button>
            </div>
        </div>
    </section>

    {{!-- Control de caja --}}
    <section id="seleccionCaja" class="contenedorRegistener1 noActivo">
        <div id="seleccionCaja__contenedorGeneral">
            <div class="contenedorRegistener2" id="seleccionCaja__contenedorSaldos">
                <h2 class="seleccionCaja__h2">Caja</h3>
                <div id="seccionCaja__estado">
                    <h3>Estado:</h3> <h3 class="letra__activo">Activo</h3>
                </div>
                <button class="botonRegistener3" id="seccionCaja__movimientosCaja">Movimientos de caja</button>
                <div id="seleccionCaja__tablaSaldos__encabezado" class="seleccionCaja__tablaSaldos__fila">
                    <div class="seleccionCaja__tablaSaldos__metodo">Metodo</div>
                    <div>Saldo inicial</div>
                    <div>Saldo final</div>
                    <div>Observado</div>
                    <div>Diferencia</div>
                </div>
                <div id="seleccionCaja__tablaSaldos"></div>
            </div>
            <div class="contenedorRegistener2" id="seleccionCaja__abrirCerrar">
                <button class="botonRegistener3" id="seccionCaja__abrirCaja">Abrir caja</button>
                <button class="botonRegistener3" id="seccionCaja__cerrarCaja">Cerrar caja</button>
                <div id="seccionCaja__ultimoInicio" >Ultimo inicio: 7/13/2024 15:00</div>
                <div id="seccionCaja__ultimoCierre" >Ultimo cierre: 7/13/2024 13:00</div>
            </div>
            <div class="contenedorRegistener2" id="seleccionCaja__cambiosCaja">
                <h2       id="seleccionCaja__cambiosCaja__h2"      class="seleccionCaja__h2"> Cambios de caja</h3>
                <select   id="seleccionCaja__cambiosCaja__metodo"  class="inputRegistener1">
                    <option>Efectivo</option>
                    <option>Tarjeta</option>
                </select>
                <input    id="seleccionCaja__cambiosCaja__monto"   class="inputRegistener1">
                <textarea id="seleccionCaja__cambiosCaja__observacion"></textarea>
                <button   id="seleccionCaja__cambiosCaja__button" class="botonRegistener3">Confirmar</button>
            </div>
        </div>
    </section>

    {{!-- Ventana para seleccionar el registro que se quiere ver --}}
    <section id="registros" class="contenedorRegistener1 noActivo">
        <div id="registros__botonVentas" class="registros__opcion">
            <h2 class="registros__h2">Registro de ventas</h2>
            <div class="registros__imagen"></div>
        </div>
        <div id="registros__botonArqueos" class="registros__opcion">
            <h2 class="registros__h2">Registro de arqueos</h2>
            <div class="registros__imagen"></div>
        </div>
    </section>

    {{!-- Registro de ventas --}}
    <section id="registroVentas" class="contenedorRegistener1 noActivo">
        <div id="registroVentas__contenido">
            <h2>Registro de ventas</h2>
            <div id="registroVentas__filtros">
                <h3 class="registroVentas__filtros__h3">Desde</h3>
                <input class="inputRegistener1" id="registroVentas__filtros__fechaDesde" type="date" >
                <h3 class="registroVentas__filtros__h3">Hasta</h3>
                <input class="inputRegistener1" id="registroVentas__filtros__fechaHasta" type="date" >
                <h3 class="registroVentas__filtros__h3">Cantidad</h3>
                <select id="registroVentas__filtros__cantidad" class="inputRegistener1">
                    <option>5</option>
                    <option>10</option>
                    <option>25</option>
                    <option>50</option>
                    <option>100</option>
                </select>
            </div>
            <div id="registroVentas__indiceTabla" class="registroVentas__fila">
                <div id="registroVentas__indiceTabla__ID">ID</div>
                <div id="registroVentas__indiceTabla__hora">Hora</div>
                <div id="registroVentas__indiceTabla__total">Total</div>
                <div id="registroVentas__indiceTabla__metodo">Metodo</div>
                <div id="registroVentas__indiceTabla__contenedorEstado">
                    <div id="registroVentas__indiceTabla__estado">Estados<br>
                        <div id="registroVentas__indiceTabla__estado__opciones" class="noActivo">
                            <label class="estado__opciones__label" ><input id="estado__opciones__exitoso" type="checkbox" value="exitoso"> Exitoso</label>
                            <label class="estado__opciones__label" ><input id="estado__opciones__modificado" type="checkbox" value="modificado"> Modificado</label>
                            <label class="estado__opciones__label" ><input id="estado__opciones__anulado" type="checkbox" value="anulado"> Anulado</label>
