<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Registener</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    {{!-- Estilos de registener --}}
    <link rel='stylesheet' type='text/css' media='screen' href='../css/registener.css'>
    <link rel='stylesheet' type='text/css' media='screen' href='../css/registener/configuracion.css'>


    <link rel='stylesheet' type='text/css' media='screen' href='../css/mensajeEmergente/mensajeEmergente.css'>
    <link rel='stylesheet' type='text/css' media='screen' href='../css/mensajeEmergente/modificarProducto.css'>
    <link rel='stylesheet' type='text/css' media='screen' href='../css/mensajeEmergente/varianteProducto.css'>
    <link rel='stylesheet' type='text/css' media='screen' href='../css/mensajeEmergente/ventanaEmergente.css'>
    <link rel='stylesheet' type='text/css' media='screen' href='../css/ventanaProductos.css'>
    <link rel='stylesheet' type='text/css' media='screen' href='../css/normalize.css'>
    <script src="https://kit.fontawesome.com/d292c2d48e.js" crossorigin="anonymous"></script>
</head>
<body>

    {{>  mensajeEmergente }}

    {{!-- Fondo oscuro de la ventana emergente --}}
    <div id="ventanaEmergenteFondo" class="noActivo">

        {{!-- Ventana emergente que avisa o le hace una pregunta al usuario --}}
        <div id="ventanaEmergente" class="noActivo">

            <div id="ventanaEmergente__mensaje"></div>
            <div id="ventanaEmergente__aceptar">
                <button id="ventanaEmergente__aceptar__boton">Aceptar</button>
            </div>
            <div id="ventanaEmergente__rechazar">
                <button id="ventanaEmergente__rechazar__boton">Rechazar</button>
            </div>
    
        </div>

        {{!-- Ventana emergente para modificar un producto --}}
        <div id="modificarProducto" class="noActivo">

            <div id="modificarProducto__fotoDescripcion">
                <h4>Foto</h4>
                <img id="modificarProducto__fotoDescripcion__img" class="imagenProducto"></img>
                <h4>Descripcion</h4>
                <textarea id="modificarProducto__fotoDescripcion__textarea"></textarea>
            </div>

            <form id="modificarProducto__caracteristicas">
                <h4 class="modificarProducto__caracteristicas__h4" >ID</h4>
                <input  class="modificarProducto__caracteristicas__input"  name="_id"    id="modificarProducto__caracteristicas__input__id" readonly>
                <h4 class="modificarProducto__caracteristicas__h4" >Nombre</h4>
                <input  class="modificarProducto__caracteristicas__input"  name="nombre"    id="modificarProducto__caracteristicas__input__nombre">
                <h4 class="modificarProducto__caracteristicas__h4" >Precio Unitario</h4>
                <input  class="modificarProducto__caracteristicas__input"  name="precio"    id="modificarProducto__caracteristicas__input__precio" type="number">
                <h4 class="modificarProducto__caracteristicas__h4" >Marca</h4>
                <input  class="modificarProducto__caracteristicas__input"  name="marca"     id="modificarProducto__caracteristicas__input__marca">
                <h4 class="modificarProducto__caracteristicas__h4" >Modelo</h4>
                <input  class="modificarProducto__caracteristicas__input"  name="modelo"    id="modificarProducto__caracteristicas__input__modelo">
                <h4 class="modificarProducto__caracteristicas__h4" >Categoria</h4>
                <select class="modificarProducto__caracteristicas__input" name="categoria"  id="modificarProducto__caracteristicas__select__categoria">
                    <option>BMX</option>
                    <option>MTB</option>
                    <option>Ni√±os</option>
                    <option>Accesorios</option>
                    <option>Agregar Categoria</option>
                </select>
                <input  class="modificarProducto__caracteristicas__input noActivo" name="categoria" placeholder="Ingrese una nueva categoria" id="modificarProducto__caracteristicas__input__categoria">
                <h4 class="modificarProducto__caracteristicas__h4" >Imagenes</h4>
                <div    class="modificarProducto__caracteristicas__input"                   id="modificarProducto__caracteristicas__div-imagenes" ></div>
            </form>

            <div id="variantesProducto">
                <h4 class="modificarProducto__caracteristicas__h4" >Variantes</h4>
                {{!-- Indice de categorias --}}
                <div id="variantesProducto__indice">
                    <h5>SKU</h5>
                    <h5>Color</h5>
                    <h5>Talle</h5>
                    <h5>Stock</h5>
                </div>
                <div id="variantesProducto__variantes"></div>
                <button id="variantesProducto__agregarVariante" class="botonRegistener3" >Agregar Variante</button>
            </div>

            <div id="especificacionesProducto">
                <h4 class="modificarProducto__caracteristicas__h4" >Especficaciones</h4>
                {{!-- Indice de categorias --}}
                <div id="especificacionesProducto__indice">
                    <h5>Nombre</h5>
                    <h5>Descripcion</h5>
                </div>
                <div id="especificacionesProducto__especificaciones"></div>
                <button id="especificacionesProducto__button" class="botonRegistener3" >Agregar especificacion</button>
            </div>

            <div id="modificarProducto__respuesta">
                <button id="modificarProducto__aceptar" class="botonRegistener3">Aceptar</button>
                <button id="modificarProducto__cancelar" class="botonRegistener3">Cancelar</button>
            </div>
        </div>

        {{!-- Ventana emergente para visualizar o cargar una imagen de un producto --}}
        <div id="imagenVariantesProducto" class="noActivo">
            {{!-- Contenedor de la imagen --}}
            <img id="imagenVariantesProducto__img" class="imagenProducto">
            {{!-- Boton para eliminar la imagen actual --}}
            <i class="fa-solid fa-trash-can botonNegativo botonRegistener3" id="producto__eliminarImagen" aria-hidden="true"></i>
            {{!-- Input para agregar una nueva imagen --}}
            <input id="imagenVariantesProducto__input" class="botonRegistener1" type="file">
            {{!-- Botones para guardar o volver --}}
            <div>
                {{!-- Boton para guardar la imagen --}}
                <button id="imagenVariantesProducto__guardar" class="botonRegistener1">Guardar</button>
                {{!-- Boton para volver --}}
                <button id="imagenVariantesProducto__volver" class="botonRegistener1">Volver</button>
            </div>
        </div>
    </div>


    <div id="barraLateral">
        <div id="barraLateral__iconos">
            <button id="barraLateral_A__icono" class="botonRegistener3">
                <i class="fa-solid fa-list"></i>
            </button>
            <button id="barraLateral_B__icono" class="botonRegistener3" >
                <i class="fa-solid fa-cash-register"></i>
            </button>
            <button id="barraLateral_C__icono" class="botonRegistener3">
                <i class="fa-solid fa-table-cells"></i>
            </button>
            <button id="barraLateral_D__icono" class="botonRegistener3">
                <i class="fa-solid fa-chart-line"></i>
            </button>
            <button id="barraLateral_E__icono" class="botonRegistener3">
                <i class="fa-solid fa-address-card"></i>
            </button>
            <button id="barraLateral_AA__icono" class="botonRegistener3">
                <i class="fa-solid fa-gear"></i>
            </button>
        </div>
        <div id="barraLateral__nombres">
            <div id="barraLateral_A__nombre" class="ayudaRegistener1">Productos</div>
            <div id="barraLateral_B__nombre" class="ayudaRegistener1">Venta al publico</div>
            <div id="barraLateral_C__nombre" class="ayudaRegistener1">Registro de ventas</div>
            <div id="barraLateral_D__nombre" class="ayudaRegistener1">Estadisticas</div>
            <div id="barraLateral_E__nombre" class="ayudaRegistener1">Registro de empleados</div>
            <div id="barraLateral_AA__nombre" class="ayudaRegistener1">Configuracion</div>
        </div>
    </div>

    {{!-- Contenedor general de categorias, indice y productos --}}
    <div id="contenedorConfiguracionProductos" class="contenedorRegistener1 noActivo">
        <div id="contenedorConfiguracionProductos__contenido">
            {{!-- Contenedor de categorias --}}
            <div id="contenedorConfiguracionProductos__contenido__categorias"></div>

            {{!-- Indice de categorias --}}
            <div class="tipo__categoria__producto">
                <div>Nombre</div>
                <div>Precio</div>
                <div>Stock</div>
                {{!-- Boton para agregar un producto --}}
                <button id="contenedorConfiguracionProductos__contenido__agregarProducto" class="botonRegistener3"> + </button>
            </div>
            

            {{!-- Contenedor de productos --}}
            <div id="contenedorConfiguracionProductos__contenido__productos" ></div>
        </div>

    </div>

    {{!-- Venta al publico --}}
    <div id="seleccionProductos" class="contenedorRegistener1">
        <div id="seleccionProductos__div-contenedorSeleccionarProductos">
            <h2>Seleccionar Productos</h2>
            <label>
                Agrupar por categoria
                <input type="checkbox"  id="seleccionProductos__botonAgruparCategorias" checked>
            </label>
            <label>
                Agrupar por productos
                <input type="checkbox"  id="seleccionProductos__botonSoloVariantes" checked>
            </label>
            <input id="seleccionProductos__input-buscarSKU" class="inputRegistener1" placeholder="Buscar un SKU">
            <input id="seleccionProductos__input-buscar" class="inputRegistener1" placeholder="Buscar un producto">
            <div id="seleccionProductos__div-productos" > </div>
        </div>
        <div id="seleccionProductos__div-productosFav">
            <h2>Productos favoritos</h2>
        </div>
        <div id="seleccionProductos__div-resumen">
            <h2>Resumen</h2>
            <table id="seleccionProductos__div-resumen__table">
                <thead>
                    <tr>
                        <th class="seleccionProductos__div-resumen__table__nombre">SKU</th>
                        <th class="seleccionProductos__div-resumen__table__nombre">Nombre</th>
                        <th>Cantidad</th>
                        <th>Precio</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
            <div id="seleccionProductos__div-resumen__total">
                <div>Total</div>
                <div >$ 0</div>
            </div>
        </div>
        <div id="botonesVentaPublico">
            <button class="botonRegistener2 nodisponible" id="botonIrSeleccionProductos"><i class="fa-solid fa-arrow-right-long"></i></button>
            <button class="botonRegistener2" id="botonIrPago"><i class="fa-solid fa-arrow-right-long"></i></button>
        </div>
        <div id="seleccionProductos__div-pago">
            <h2 id="seleccionProductos__div-pago__h2">Pago</h2>
            <div id="div-pago__metodoPago">
                <h4>Modo de pago</h4>
            </div>
            <div id="div-pago__modificacion">
                <h4>Modificacion</h4>
                <input class="inputRegistener1" placeholder="Ingrese porcentaje de descuento" type="number"></input>
                <button class="botonRegistener3">10% de descuento</button>
                <button class="botonRegistener3">15% de descuento</button>
                <button class="botonRegistener3">Sin cargo</button>
            </div>
            <div id="div-pago__div-total">
                <h5>Pago 1</h5>
                <h5>Pago 2</h5>
                <input class="inputRegistener1"              id="div-pago__div-total__div-pago1" placeholder="Ingrese el monto">
                <input class="inputRegistener1 nodisponible" id="div-pago__div-total__div-pago2" type="number" placeholder="Ingrese el monto" disabled>
                <h5    class="div-pago__div-total__h5">Vuelto</h5>
                <div   class="inputRegistener1"              id="div-pago__div-total__div-vuelto">$ 0</div>
                <h5    class="div-pago__div-total__h5">Total</h5>
                <div   class="inputRegistener1"              id="div-pago__div-total__div-total">$ 0</div>

            </div>
            <div id="div-pago__confirmar">
                <textarea id="div-pago__confirmar__observacion" placeholder="Ingrese una observacion"></textarea>
                <button id="div-pago__confirmar__boton" class="botonRegistener3 nodisponible">Confirmar</button>
            </div>
        </div>
    </div>

    {{!-- Registro de ventas --}}
    <div id="registroVentas" class="contenedorRegistener1"></div>

    {{!-- Configuracion --}}
    <div id="configuracion" class="contenedorRegistener1">
        <div id="configuracion__global" class="configuracion__div">
            <h3 class="configuracion__h3">Configuraciones globales</h3>
            <h4 class="configuracion__h4">Tema</h4>
            <select id="configuracion__global__select-tema">
                <option>Oscuro</option>
                <option>Azul oscuro</option>
                <option>Rojo chino</option>
            </select>
        </div>
        <div id="configuracion__ventaPublico" class="configuracion__div">
            <h3 class="configuracion__h3">Venta al publico</h3>
        </div>
    </div> 









    {{!-- General--}}
    <script type="module" src="../../js/global.js"></script>
    <script type='module' src="../js/registener/index.js"></script>
    <script type='module' src="../js/registener/productos.js"></script>
    <script type='module' src="../js/registener/configuracion.js"></script>
    <script type='module' src="../js/registener/registroVentas.js"></script>

    {{!-- Ventanas emergentes --}}
    <script type='module' src="../js/registener/ventanasEmergentes/modificarFoto.js"></script>
    <script type='module' src="../js/registener/ventanasEmergentes/modificarProducto.js"></script>
    <script type='module' src="../js/registener/ventanasEmergentes/preguntar.js"></script>

    <script type='module' src="../js/helpers/mostrarMensaje.js"></script>

</body>
</html>